---
interface Props {
   title: string;
}

import Navbar from '../components/Navbar.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
   <head>
      <!-- Font Imports -->
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Astloch:wght@400;700&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
      <link rel="icon" type="image/svg+xml", href="/js.svg">
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>{ title }</title>
   </head>
   <body>
      <Navbar/>
      <div class="centering-div">
         <div class="centered-div">
            <h1 class="title">{title}</h1>
            <slot/>
         </div>
      </div>
   </body>
</html>

<style is:global>
html, body {
   margin: 0;
}

p {
   font-family: 'Roboto', sans-serif;
   text-align: justify;
   text-indent: 1rem;
   font-size: 1.2rem;
   margin: 0;
   margin-bottom: 1rem;
}

@media screen and (max-width: 500px) {
   p {
      font-size: 1rem;
   }
}

hr {
   margin-bottom: 2rem;
}

h1, h2, h3 {
   font-family: 'Montserrat', sans-serif;
   margin-top: 1.5rem;
   margin-bottom: .5rem;
}

h1 {
   margin-bottom: 1rem;
   font-size: 3rem;
}

h2 {
   font-size: 2rem;
}

h3 {
   font-size: 1.5rem;
}

a {
   color: hsl() 
}

li {
   font-family: 'Roboto', sans-serif;
   margin-bottom: 1rem;
}

h2#footnote-label {
   font-size: 1.5rem;
   margin-top: 2rem;
}

img {
   max-width: 100%;
   height: auto;
   max-height: 600px;
   width: auto;
   margin-top: 2rem;
   display: block;
   margin-left: auto;
   margin-right: auto;
}

.title {
   font-size: 2.2rem;
}

.centering-div {
   display: flex;
   justify-content: center;
}

.centered-div {
   max-width: 85ch;
   margin-left: 1rem;
   margin-right: 1rem;
   margin-bottom: 5rem;
}
</style>
